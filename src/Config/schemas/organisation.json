{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Organisation",
    "description": "Schema for Organisation entity type-specific fields",
    "type": "object",
    "properties": {
        "organisation_type": {
            "type": ["string", "null"],
            "description": "Type of organisation (e.g., Guild, Religion, Military, Government)"
        },
        "headquarters_id": {
            "type": ["integer", "null"],
            "description": "Reference to Location entity (headquarters)"
        },
        "goals": {
            "type": ["string", "null"],
            "description": "Primary goals or objectives of the organisation"
        },
        "founding_date": {
            "type": ["string", "null"],
            "description": "When the organisation was founded"
        },
        "leader_id": {
            "type": ["integer", "null"],
            "description": "Reference to Character entity (current leader)"
        },
        "member_count": {
            "type": ["integer", "null"],
            "description": "Approximate number of members"
        },
        "ranks": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [],
            "description": "List of ranks or positions within the organisation"
        }
    },
    "additionalProperties": true
}
