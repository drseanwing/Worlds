{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Character",
    "description": "Schema for Character entity type-specific fields",
    "type": "object",
    "properties": {
        "age": {
            "type": ["string", "integer", "null"],
            "description": "Age of the character"
        },
        "pronouns": {
            "type": ["string", "null"],
            "description": "Character's pronouns (e.g., he/him, she/her, they/them)"
        },
        "is_dead": {
            "type": "boolean",
            "default": false,
            "description": "Whether the character is deceased"
        },
        "personality_traits": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [],
            "description": "List of personality traits"
        },
        "appearance_traits": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [],
            "description": "List of physical appearance traits"
        },
        "title": {
            "type": ["string", "null"],
            "description": "Character's title or rank"
        },
        "gender": {
            "type": ["string", "null"],
            "description": "Character's gender"
        },
        "race_id": {
            "type": ["integer", "null"],
            "description": "Reference to Race entity"
        },
        "location_id": {
            "type": ["integer", "null"],
            "description": "Reference to current Location entity"
        },
        "family_ids": {
            "type": "array",
            "items": {
                "type": "integer"
            },
            "default": [],
            "description": "References to Family entities"
        },
        "organisation_ids": {
            "type": "array",
            "items": {
                "type": "integer"
            },
            "default": [],
            "description": "References to Organisation entities"
        }
    },
    "additionalProperties": true
}
