# =============================================================================
# Worlds - Docker Build Exclusions
# =============================================================================
# Files and directories excluded from the Docker build context
# =============================================================================

# -----------------------------------------------------------------------------
# Version Control
# -----------------------------------------------------------------------------
.git
.gitignore
.gitattributes

# -----------------------------------------------------------------------------
# Dependencies (rebuilt in container)
# -----------------------------------------------------------------------------
node_modules
vendor

# -----------------------------------------------------------------------------
# Runtime Data (persisted via volumes)
# -----------------------------------------------------------------------------
data/*.db
data/*.sqlite
data/*.sqlite3
data/uploads/*
!data/uploads/.gitkeep
!data/.gitkeep

# -----------------------------------------------------------------------------
# Environment Files (use Docker env vars instead)
# -----------------------------------------------------------------------------
.env
.env.local
.env.*.local
!.env.example
!.env.docker

# -----------------------------------------------------------------------------
# IDE and Editor Files
# -----------------------------------------------------------------------------
.idea
.vscode
*.swp
*.swo
*~
.project
.settings

# -----------------------------------------------------------------------------
# Operating System Files
# -----------------------------------------------------------------------------
.DS_Store
Thumbs.db
desktop.ini

# -----------------------------------------------------------------------------
# Documentation (not needed in production)
# -----------------------------------------------------------------------------
documentation/
docs/
*.md
!README.md

# -----------------------------------------------------------------------------
# Testing (not needed in production)
# -----------------------------------------------------------------------------
tests/
phpunit.xml
.phpunit.result.cache
coverage/
.coverage

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------
.github
.gitlab-ci.yml
.travis.yml
.circleci

# -----------------------------------------------------------------------------
# Sensitive Files and Credentials
# -----------------------------------------------------------------------------
*.pem
*.key
*.p12
*.pfx
*.crt
credentials*.json
secrets/
*.bak

# -----------------------------------------------------------------------------
# Logs and Temporary Files
# -----------------------------------------------------------------------------
*.log
logs/
tmp/
temp/
cache/

# -----------------------------------------------------------------------------
# Build Artifacts
# -----------------------------------------------------------------------------
/public/build/
*.map

# -----------------------------------------------------------------------------
# Docker Development Files
# -----------------------------------------------------------------------------
docker-compose.yml
docker-compose.override.yml
!docker-compose.prod.yml
