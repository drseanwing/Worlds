# =============================================================================
# Worlds - Docker Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment
# =============================================================================

# -----------------------------------------------------------------------------
# Host Configuration
# -----------------------------------------------------------------------------
# Port on the host machine to expose the application
HOST_PORT=8080

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Application name displayed in the UI
APP_NAME=Worlds

# Public URL for the application (used for generating links)
APP_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Debug Mode
# -----------------------------------------------------------------------------
# Set to 'true' to enable debug mode (shows detailed errors)
# WARNING: Never enable in production!
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Path to SQLite database file (inside container)
DATABASE_PATH=/var/www/html/data/campaign.db

# Automatically run database migrations on startup
AUTO_MIGRATE=true

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Directory for user-uploaded files (inside container)
UPLOAD_DIR=/var/www/html/data/uploads
